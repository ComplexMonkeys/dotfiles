# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}
order += "disk /"
order += "disk /mnt/nvme0n1"
order += "disk /mnt/nfs/nfsa"
order += "disk /mnt/nfs/nfsb"
order += "memory"
order += "tztime local"


disk "/" {
        format = "home %avail"
}
disk "/mnt/nvme0n1" {
        format = "ssd %avail"
}

disk "/mnt/nfs/nfsa" {
        format = "nfsa %avail"
}

disk "/mnt/nfs/nfsb" {
        format = "nfsb %avail"
}

memory {
        format = "+%available | -%used "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%d.%m.%Y %H:%M:%S"
}
